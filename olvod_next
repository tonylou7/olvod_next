// ==UserScript==
// @name         欧乐下一集
// @namespace    https://github.com/tonylou7/olvod_next
// @version      2024-07-23
// @description  Short cut for olvod at full screen mode
// @author       TonyLou
// @match        *://*.olevod.com/player/vod/*
// @icon         data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==
// @grant        none
// ==/UserScript==

(function() {

    function clickElement(selector) {
        let el = document.querySelector(selector);
        if (el){
            el.click();
        }
    }

    var slt2 = "#playerBoxTop > div > div > div > div.container > div > div.plyr__controls > div.plyr__controls__item.plyr__volume > div > div > div:nth-child(2) > div"

    // Define the key combination (e.g., Ctrl + Shift + S)
    document.addEventListener('keydown', function(e) {
        if (e.key === ']') {
            //e.preventDefault();
            clickElement(slt2);
        }
    }, false);


})();
